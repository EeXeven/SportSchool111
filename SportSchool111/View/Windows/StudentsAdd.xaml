<Window x:Class="SportSchool111.View.Windows.StudentsAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportSchool111.View.Windows"
        mc:Ignorable="d"
        Title="Студент" WindowStartupLocation="CenterScreen"
        Height="690" Width="1100" >
    <Window.Background>
        <ImageBrush ImageSource="BackGrounds.png"/>
    </Window.Background>

    <Grid>
        <StackPanel>
            <Grid Height="656">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.4*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>
                <!--TextBlock-->
                <TextBlock Text="• Спортсмен"
                    FontSize="24" Foreground="White" Grid.ColumnSpan="2" Margin="30,20,334,120" Grid.RowSpan="2"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"
                    Margin="148,-1,27,95" Height="102" Grid.RowSpan="2">
                    <Image Source="/Resours/Logo.png" Width="27" Margin="0,29,0,41" RenderTransformOrigin="0.5,0.5"/>
                    <TextBlock Text="Зеленоград" Foreground="White" FontSize="28" FontWeight="Regular" FontFamily="SF Pro Display" Margin="10" Height="54"/>
                </StackPanel>
                <TextBlock 
            Grid.Row="5"
            Text="ГБУ «СШОР № 111»"
                    FontSize="24" Foreground="#FFFFFF"  Grid.Column="2" Margin="133,2,1,5"/>
                <!--TextBox-->

                <TextBox Grid.Row="1" Grid.Column="0"
                Text="{Binding Name}" Style="{StaticResource RoundedTextBox}" Margin="31,55,41,50" Height="Auto"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Name}" Style="{StaticResource RoundedTextBox}" Margin="31,55,41,50" Height="Auto"/>
                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Name}" Style="{StaticResource RoundedTextBox}" Margin="31,55,41,50" Height="Auto"/>

                <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding Name}" 
                         Style="{StaticResource RoundedTextBox}"
                         Margin="31,55,41,50" Height="Auto"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Name}" 
                         Style="{StaticResource RoundedTextBox}"
                         Margin="31,55,41,50" Height="Auto"/>
                <TextBox Grid.Row="2" Grid.Column="2"  Text="{Binding Name}" 
                         Style="{StaticResource RoundedTextBox}"
                         Margin="31,55,41,50" Height="Auto"/>

                <TextBox Grid.Row="3" Grid.Column="0"  Text="{Binding Name}" 
                         Style="{StaticResource RoundedTextBox}"
                         Margin="31,55,41,50" Height="Auto"/>
                <TextBox Grid.Row="3" Grid.Column="1"  Text="{Binding Name}" 
                         Style="{StaticResource RoundedTextBox}"
                         Margin="31,55,41,50" Height="Auto" />
                <TextBox Grid.Row="3" Grid.Column="2"  Text="{Binding Name}" 
                         Style="{StaticResource RoundedTextBox}"
                         Margin="31,55,41,50" Height="Auto"/>

                <!--Buttons-->
                <Button  x:Name="ButtonAdd" Content="Добавить" 
                Click="ButtonAdd_Click"  FontSize="24" Foreground="White"
                Background="#0A6059" Margin="110,50,5,50" Grid.Row="4" Grid.Column="1" />
                <Button  x:Name="ButtonRefresh" Content="Обновить"
                Click="ButtonRefresh_Click"  FontSize="24" Foreground="White"
                Background="#0A6059" Grid.Column="2" Margin="5,50,110,50" Grid.Row="4" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
